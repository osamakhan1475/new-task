function bmi(){

var sheight1=parseFloat(document.getElementById('hgt1').value);
var sweight1=parseFloat(document.getElementById('wgt1').value);
var bmi=sweight1/Math.pow(sheight1,2);
var student_bmi=document.getElementById('bmi_index1');
student_bmi.textContent=bmi.toFixed(2);

var sheight2=parseFloat(document.getElementById('hgt2').value);
var sweight2=parseFloat(document.getElementById('wgt2').value);
var bmi=sweight2/Math.pow(sheight2,2);
var student_bmi=document.getElementById('bmi_index2');
student_bmi.textContent=bmi.toFixed(2);

}